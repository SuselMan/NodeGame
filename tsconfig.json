{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@client/*": ["Client/*"],
      "@server/*": ["Server/*"],
      "@shared/*": ["Shared/*"]
    }
  }
}
